extends layouts/default

block title
    title Catalog

block content
    main.catalog-page

        .container
            .breadcrumbs
                .breadcrumbs__item Главная
                .breadcrumbs__item.breadcrumbs__item_active Женщинам

            h1.catalog-page__title Женщинам


        .container.catalog-page__content
            aside.catalog-page__sidebar

                .categories

                    .categories__category.category
                        .category__front.category__front_opened
                            .category__title Верхняя одежда
                            .category__icon
                        ul.category__submenu
                            li
                                a(href="#").category__item Свитера  <span>(200)</span>
                            li
                                a(href="#").category__item Куртки  <span>(23)</span>
                            li
                                a(href="#").category__item.category__item_active Футболки  <span>(563)</span>
                            li
                                a(href="#").category__item Рубашки  <span>(434)</span>
                            li
                                a(href="#").category__item Майки  <span>(456)</span>

                    .categories__category.category
                        .category__front
                            .category__title Верхняя одежда
                            .category__icon
                        ul.category__submenu
                            li
                                a(href="#").category__item Свитера  <span>(200)</span>
                            li
                                a(href="#").category__item Куртки  <span>(23)</span>
                            li
                                a(href="#").category__item.category__item_active Футболки  <span>(563)</span>
                            li
                                a(href="#").category__item Рубашки  <span>(434)</span>
                            li
                                a(href="#").category__item Майки  <span>(456)</span>


            section.catalog-page__catalog
                .custom-filters
                    .custom-filters__wrapper

                        .custom-filters__filter.custom-filter.custom-filter_left-menu(data-filter-items='stock')
                            .custom-filter__front
                                span В наличии
                                svg.custom-filter__icon
                                    use( xlink:href=sprite('dropdown-arrow') )
                            .custom-filter__submenu.custom-submenu
                                .custom-submenu__wrapper
                                    .custom-submenu__item.custom-submenu__item_selected(data-filter='1') В наличии
                                    .custom-submenu__item(data-filter='2') Под заказ

                        .custom-filters__filter.custom-filter.custom-filter_brands
                            .custom-filter__front
                                span Бренд
                                svg.custom-filter__icon
                                    use( xlink:href=sprite('dropdown-arrow') )
                            .custom-filter__submenu.custom-submenu.custom-submenu
                               .custom-submenu__wrapper

                        .custom-filters__filter.custom-filter(data-filter-price)
                            .custom-filter__front
                                span Цена
                                svg.custom-filter__icon
                                    use( xlink:href=sprite('dropdown-arrow') )
                            .custom-filter__submenu.custom-submenu.custom-submenu_price
                                .custom-submenu__wrapper
                                    .custom-submenu__inputs
                                        .custom-submenu__input
                                            | От
                                            input(type='number' value='0' data-price-from)
                                        .custom-submenu__input
                                            | До
                                            input(type='number' value='0' data-price-to)
                                .custom-submenu__wrapper
                                    .custom-submenu__btn.btn.btn-fill(data-price-btn) Применить

                        .custom-filters__filter.custom-filter
                            .custom-filter__front
                                span Размер
                                svg.custom-filter__icon
                                    use( xlink:href=sprite('dropdown-arrow') )
                            .custom-filter__submenu.custom-submenu
                                .custom-submenu

                        .custom-filters__filter.custom-filter
                            .custom-filter__front
                                span Рейтинг
                                svg.custom-filter__icon
                                    use( xlink:href=sprite('dropdown-arrow') )
                            .custom-filter__submenu.custom-submenu
                                .custom-submenu

                        .custom-filters__filter.custom-filter.custom-filter_right-menu(data-filter-items='sort')
                            .custom-filter__front
                                span По популярности
                                svg.custom-filter__icon
                                    use( xlink:href=sprite('dropdown-arrow') )
                            .custom-filter__submenu.custom-submenu
                                .custom-submenu__wrapper
                                    .custom-submenu__item.custom-submenu__item_selected(data-filter='1') По популярности
                                    .custom-submenu__item(data-filter='2') По возрастанию цены
                                    .custom-submenu__item(data-filter='3') По убыванию цены
                                    .custom-submenu__item(data-filter='4') По новинкам
                                    .custom-submenu__item(data-filter='5') По скидкам
